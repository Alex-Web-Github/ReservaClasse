<header>

  <div
    class="container navbar justify-between bg-base-100 shadow-sm">
    <div
      class="w-64 flex-initial">
      <a
        href="{{ path('home') }}">
        <img
          src="{{ asset('img/logo-ReservaClasse-2.webp')}}" alt="logo Réserva'Classe">
      </a>
    </div>
    <div
      class="">
      <div
        class="dropdown">
        <div
          tabindex="0"
          role="button"
          class="btn btn-ghost lg:hidden">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewbox="0 0 24 24"
            stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h8m-8 6h16"/>
          </svg>
        </div>
        <ul
          tabindex="0"
          class="menu menu-md dropdown-content absolute right-0 bg-base-100 rounded-box z-1 mt-6 w-52 p-2 shadow">
          <li>
            <a>
              Item 1
            </a>
          </li>
          <li>
            <a>
              Item 1
            </a>
          </li>
          <li>
            <a>
              Item 1
            </a>
          </li>
          <li>
            <a>
              Item 1
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div
      class="hidden lg:flex">
      <ul
        class="menu menu-lg menu-horizontal px-1 gap-4 items-center">

        <li>
          <a
            href="{{ path('home') }}" class="menu-{{ app.current_route == 'home' ? 'active' : '' }}">
            Accueil
          </a>
        </li>
        <li>
          <a
            href="
                                                                                                                                                                                                                                                                              {{ path('eleve.index') }}
                                                                                                                                                                                                                                                                              "
            class="menu-{{ app.current_route == 'eleve.index' ? 'active' : '' }}
                                                                                                                                                                                                                                                                              ">

            Les Elèves
          </a>
        </li>
        <li>
          <a
            href="
                                                                                                                                                                                                                                                                          {{ path('session.index') }}
                                                                                                                                                                                                                                                                          "
            class="menu-{{ app.current_route starts with 'session.' ? 'active' : '' }}">

            Réserver un créneau
          </a>
        </li>

        {% if app.user %}
          <li>
            <div
              class="dropdown">
              <div
                tabindex="0"
                role="button"
                class="btn btn-ghost btn-circle avatar">
                <div
                  class="w-10 rounded-full">
                  <img
                    alt="Tailwind CSS Navbar component"
                    src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp"/>
                </div>
              </div>

              <ul
                class="absolute right-0 dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">

                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TEACHER') %}
                  <li>
                    <a
                      href="{{ path('admin') }}" class="menu"
                      target="_blank">
                      Administration
                    </a>
                  </li>
                {% endif %}
                <li
                  class="menu-disabled">
                  <a
                    href="#">
                    Mon profil
                  </a>
                </li>
                <li>
                  <a
                    href="{{ path('app_logout') }}" class="text-error">
                    Déconnexion
                  </a>
                </li>
              </ul>
            </li>
          </li>
        </details>
      </li>
    {% else %}
      <li>
        <a
          class="menu-{{ app.current_route == 'app_login' ? 'active' : '' }}"
          href="{{ path('app_login') }}">
          Connexion
        </a>
      </li>
    {% endif %}
  </ul>

</div></div></header>
