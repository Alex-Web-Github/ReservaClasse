{% extends 'base.html.twig' %}

{# Titre dynamique en fonction du filtre #}
{% if filter == 'all' %}
  {% set page_title = "Tous les créneaux | Réserva'Classe" %}
  {% set page_title_h1 = "Tous les créneaux" %}
{% elseif filter == 'booked' %}
  {% set page_title = "Les créneaux réservés | Réserva'Classe" %}
  {% set page_title_h1 = "Les créneaux réservés" %}
{% else %}
  {% set page_title = "Les créneaux disponibles | Réserva'Classe" %}
  {% set page_title_h1 = "Les créneaux disponibles" %}
{% endif %}

{% block title %}
  {{ page_title }}
{% endblock %}

{% block title_h1 %}
  {{ page_title_h1 }}
{% endblock %}

{% block session_label %}
  <div
    class="badge badge-sm md:badge-xl badge-neutral mb-2">
    {{ sessionId.label }}
  </div>
{% endblock %}

{% block body %}

  <div
    class="container">
    {# Tabs avec role="tablist" #}
    <div
      role="tablist"
      class="tabs tabs-border mb-4">
      {% for dateSession in dateSessions %}
        <a
          role="tab"
          class="tab {{ loop.first ? 'tab-active' : '' }}"
          onclick="openTab({{ loop.index }})">
          <span
            class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewbox="0 0 24 24"
              stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            {{ dateSession.date|date('d/m/Y') }}
          </span>
          {% if filter in ['free', 'all'] %}
            {% set availableSlots = dateSession.slots|filter(slot => not slot.isBooked) %}
            {% if availableSlots|length > 0 %}
              <span
                class="badge badge-success badge-xs font-semibold ml-2 tooltip tooltip-success"
                data-tip="Créneaux disponibles">

                {{ availableSlots|length }}
              </span>
            {% else %}
              <span
                class="badge badge-error badge-xs font-semibold ml-2 tooltip tooltip-error"
                data-tip="Aucun créneau disponible">
                0
              </span>

            {% endif %}
          {% endif %}

        </a>
      {% endfor %}
    </div>

    {# Contenu de chaque tab avec animation #}
    {% for dateSession in dateSessions %}
      <div
        id="content-{{ loop.index }}"
        class="transform transition-all duration-300 ease-in-out {{ not loop.first ? 'hidden opacity-0 scale-95' : 'opacity-100 scale-100' }}">
        <div
          class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div
            class="card-body">
            <h2
              class="card-title text-2xl flex items-center gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary"
                fill="none"
                viewbox="0 0 24 24"
                stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              {{ dateSession.startTime|date('H:i') }}
              à
              {{ dateSession.endTime|date('H:i') }}
            </h2>
            <div
              class="overflow-x-auto">

              {% if filter == 'all' %}
                {# Afficher tous les créneaux #}
                {% include 'session/_session-table.html.twig' with {'dateSession': dateSession, 'eleves': eleves, 'filter': filter} only %}

              {% elseif filter == 'free' %}
                {# Affichage des créneaux libres #}
                {% set availableSlots = dateSession.slots|filter(slot => not slot.isBooked) %}
                {% if availableSlots|length > 0 %}

                  {% include 'session/_session-table.html.twig' with {'dateSession': dateSession, 'eleves': eleves, 'filter': filter} only %}

                {% else %}
                  <div
                    class="alert alert-warning shadow-lg">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="stroke-current shrink-0 h-6 w-6"
                      fill="none"
                      viewbox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                    <span>
                      Aucun créneau disponible pour cette date.
                    </span>
                  </div>
                {% endif %}

              {% else %}
                {# Affichage des créneaux réservés #}
                {% set bookedSlots = dateSession.slots|filter(slot => slot.isBooked) %}
                {% if bookedSlots|length > 0 %}

                  {% include 'session/_session-table.html.twig' with {'dateSession': dateSession, 'eleves': eleves, 'filter': filter} only %}

                {% else %}
                  <div
                    class="alert alert-warning shadow-lg">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="stroke-current shrink-0 h-6 w-6"
                      fill="none"
                      viewbox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>
                      Aucun créneau réservé pour cette date.
                    </span>
                  </div>
                {% endif %}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  {% endblock %}
